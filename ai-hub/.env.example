# AI Hub Environment Configuration

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=aihub
POSTGRES_PASSWORD=aihub123
POSTGRES_DB=aihub
POSTGRES_PORT=5432
# For managed Postgres (e.g., Supabase) you can set:
# DATABASE_URI=postgresql://USER:PASSWORD@HOST:5432/DBNAME
# The app will switch to async driver automatically and you can enforce SSL:
# DB_SSL=True
DATABASE_URI=
DB_SSL=

# Redis Configuration (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_ORGANIZATION=

# Email Configuration
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=AI Hub System

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Server Configuration
SERVER_NAME=AI Hub
SERVER_HOST=http://localhost:8000

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# SLA Configuration
SLA_ANALYST_DAYS=5
SLA_FINANCE_DAYS=5
SLA_DEVELOPER_DAYS=5

# Duplicate Detection
DUPLICATE_SIMILARITY_THRESHOLD=0.8
IMPROVEMENT_SIMILARITY_THRESHOLD=0.5

# Logging
LOG_LEVEL=INFO

# Supabase (optional if you use Supabase as DB or want to call REST/storage)
# SUPABASE_URL=https://<project>.supabase.co
# SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100
