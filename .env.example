## Root env for dev conveniences
# Shared
APP_ENV=development

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
SECRET_KEY=please-change-in-prod
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/aihub

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# SMTP (optional; if not set, emails are mock-sent)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM=
EMAIL_PROVIDER=smtp

# SLA settings (days)
SLA_REVIEW_DAYS=5
SLA_ASSIGNMENT_DAYS=5

# Rate limiting
RATE_LIMIT_PER_MINUTE=120
